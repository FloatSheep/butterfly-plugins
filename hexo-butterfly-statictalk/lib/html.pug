mixin defaultStyle
  style.
    .talk-wrapper {
      margin-bottom: 2.7rem;
      display: flex;
      justify-content: flex-start;
      flex-direction: column;
      flex-wrap: nowrap;
      align-items: flex-start;
      border: 2px solid transparent;
      border-radius: .4rem;
      padding: .9rem;
      box-shadow: var(--card-box-shadow);
      transition: all .3s;
    }
    .talk-wrapper:hover {
      box-shadow: var(--card-hover-box-shadow);
    }
    .talk-wrapper .text p:last-child {
      margin-bottom: .1rem !important;
    }
    .talk-wrapper p.time {
      margin-left: auto !important;
    }
    #talk-container img#avatar {
      width: 70px;
      flex: 1;
      height: 70px;
      float: left;
      margin-right: 30px;
      border: 1px solid var(--font-color);
      border-radius: calc(infinity* 1px);
      box-shadow: 0 0 10px -1px #0000007d;
      aspect-ratio: 1 / 1;
    }
    @media screen and (orientation: portrait) {
      #talk-container img#avatar {
        display: none !important;
      }
    }

case config.defaultStyle
  when false
    link(rel="stylesheet", href=config.customStyle)
  when true
    +defaultStyle

#talk-container
  each value in content
    - const outputText = value.content;

    -
      function convertTimestampToDate(timestamp) {
        const date = new Date(timestamp);
        const year = date.getFullYear();
        const month = ('0' + (date.getMonth() + 1)).slice(-2);
        const day = ('0' + date.getDate()).slice(-2);
        const hours = ('0' + date.getHours()).slice(-2);
        const minutes = ('0' + date.getMinutes()).slice(-2);
        const seconds = ('0' + date.getSeconds()).slice(-2);

        return `${year}-${month}-${day} ${hours}:${minutes}:${seconds}`;
      }
      const finallyTime = convertTimestampToDate(value.timestamp);

    if config.avatar
      img#avatar.no-lightbox(src=config.avatar)
    div.talk-wrapper
      if outputText && outputText.trim() !== ''
        div.text!= outputText
      if finallyTime && finallyTime.trim() !== ''
        p.time= finallyTime
